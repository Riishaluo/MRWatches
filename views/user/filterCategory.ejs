                    body: JSON.stringify({ productId })
                });

                const result = await response.json();
                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Added to Wishlist!',
                        text: result.message,
                        showConfirmButton: false,
                        timer: 1500 
                    });
                } else {
                    Swal.fire({
