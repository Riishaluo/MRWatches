<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link rel="stylesheet" href="/assets/adminlogin.css">
    <style>
        .error {
            color: red;
            margin-bottom: 10px;
        }
    </style>
    <script>
      function validateForm(event) {
    // Prevent form submission to check validation
    event.preventDefault();

    // Clear previous error messages
    document.querySelector('#error-message').innerText = '';

    // Get input values
    const email = document.querySelector('#email').value.trim();
    const password = document.querySelector('#password').value.trim();

    // Check if any field is empty
    if (!email || !password) {
        document.querySelector('#error-message').innerText = "All fields are required.";
        return false;
    }

    // Regex for basic email validation
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    // Check if email is valid
    if (!emailRegex.test(email)) {
        document.querySelector('#error-message').innerText = "Please enter a valid email address.";
        return false;
    }

    // Check if password is empty
    if (password.length === 0) {
        document.querySelector('#error-message').innerText = "Please enter a password.";
        return false;
    }

    // If all validation passes, submit the form
    document.querySelector('#loginForm').submit();
}

    </script>
</head>
<body>
    <div class="wrapper">
        <div class="container">
            <div class="col-left">
                <div class="login-text">
                    <h2>Welcome Back</h2>
                </div>
            </div>
            <div class="col-right">
                <div class="login-form">
                    <h2>Login</h2>

                    <span style="color: red;">
                        <%= message %> <!-- Display any error messages from the server -->
                    </span>

                    <!-- Error message will be displayed here -->
                    <div id="error-message" class="error"></div>

                    <form id="loginForm" action="/admin/login" method="POST" onsubmit="validateForm(event)">
                        <p>
                            <label>Email Address<span>*</span></label>
                            <input type="text" id="email" name="email" placeholder="Email" >
                        </p>
                        <p>
                            <label>Password<span>*</span></label>
                            <input type="password" id="password" name="password" placeholder="Password" >
                        </p>
                        <p>
                            <input type="submit" value="Sign In" />
                        </p>
                        <p>
                            <a href="#">Forget Password?</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
